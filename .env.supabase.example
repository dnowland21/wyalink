# Supabase Self-Hosted Environment Variables
# Copy this to .env.supabase and fill in your values

############
# Secrets
############

# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-super-secret-postgres-password
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

############
# URLs
############

# API External URL - Your Coolify domain for Supabase
API_EXTERNAL_URL=https://supabase.wyalink.com

# Site URL - Your main website
SITE_URL=https://wyalink.com

# Additional redirect URLs (comma separated)
ADDITIONAL_REDIRECT_URLS=https://linkos.wyalink.com,http://localhost:5173,http://localhost:5174

############
# Auth Settings
############

# Allow new signups?
DISABLE_SIGNUP=false

# Enable email/password signup
ENABLE_EMAIL_SIGNUP=true

# Auto-confirm emails (set to false in production)
ENABLE_EMAIL_AUTOCONFIRM=false

# JWT expiry in seconds (default 1 hour)
JWT_EXPIRY=3600

############
# Email/SMTP Settings
############

# SMTP configuration for sending emails
SMTP_ADMIN_EMAIL=noreply@wyalink.com
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=WyaLink

############
# Database
############

# Database schemas to expose via REST API
PGRST_DB_SCHEMAS=public,storage,graphql_public
