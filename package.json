{
  "name": "wyalink-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:website": "npm run dev --workspace=@wyalink/website",
    "dev:linkos": "npm run dev --workspace=@wyalink/linkos",
    "build": "npm-run-all build:*",
    "build:website": "npm run build --workspace=@wyalink/website",
    "build:linkos": "npm run build --workspace=@wyalink/linkos",
    "preview": "npm-run-all --parallel preview:*",
    "preview:website": "npm run preview --workspace=@wyalink/website",
    "preview:linkos": "npm run preview --workspace=@wyalink/linkos"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
